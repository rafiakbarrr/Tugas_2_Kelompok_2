@model List<Apotek.Models.Pembelian>
@{
    ViewData["Title"] = "Pembelian Obat";
    int no = 1;
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Rincian Pembelian</h5>
                    <hr />
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="row">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-1"></i>
                                <strong>Sukses!</strong> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }

                    <a class="btn btn-primary" asp-controller="Pembelian" asp-action="Create">Tambah Pembelian</a>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">ID Pembelian</th>
                                <th scope="col">Tanggal Pembelian</th>
                                <th scope="col">ID Obat</th>
                                <th scope="col">Jumlah</th>
                                <th scope="col">Total Harga</th>
                                <th scope="col">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pembelian in Model)
                            {
                                <tr>
                                    <td>@(no++)</td>
                                    <td>@pembelian.idTransaksi</td>
                                    <td>@pembelian.tanggalTransaksi.ToString("dd/MM/yyyy")</td>
                                    <td>@pembelian.idObat</td>
                                    <td>@pembelian.jumlah</td>
                                    <td>@pembelian.totalHarga</td>
                                    <td>
                                        <button class="btn btn-sm btn-info btn-info-modal" data-toggle="modal" data-target="#infoModal_@pembelian.idTransaksi">
                                            <i class="fas fa-info-circle"></i>
                                        </button>

                                        <div class="modal fade" id="infoModal_@pembelian.idTransaksi tabindex="-1" role="dialog" aria-labelledby="infoModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Rincian Transaksi</h5>
                                                        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <strong>ID Pembelian:</strong> @pembelian.idTransaksi<br />
                                                        <strong>Tanggal Transaksi:</strong> @pembelian.tanggalTransaksi.ToString("dd/MM/yyyy")<br />
                                                        <strong>ID Obat:</strong> @pembelian.idObat<br />
                                                        <strong>Jumlah:</strong> @pembelian.jumlah<br />
                                                        <strong>Total Harga:</strong> @pembelian.totalHarga<br />

                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>




